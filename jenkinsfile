pipeline {
    agent any
    tools{
        dockerTool  'mydocker'
    }
    stages {
        
        stage('Cleaning previous containers') {
            steps {
                sh '(docker rm backend_run -f) | true'
                sh '(docker rm frontend_run -f) | true'
                sh '(docker rmi segiraldovi/my_back) | true'
                sh '(docker rmi segiraldovi/my_front) | true'
            }
        }
        stage('Cloning Repo') {
            steps {
                checkout scm
            }
        }
        
        stage('Running APP'){
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}